<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.alfonso.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:text="Tienes hambre?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_pregunta1" />

    <RadioButton
        android:text="Si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pregunta1"
        android:layout_alignParentStart="true"
        android:id="@+id/rB_hambreSi" />

    <RadioButton
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rB_hambreNo"
        android:layout_alignTop="@+id/rB_hambreSi"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rB_hambreSi"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_dulce_salado" />

    <RadioButton
        android:text="Dulce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dulce_salado"
        android:layout_alignParentStart="true"
        android:id="@+id/rB_dulce" />

    <RadioButton
        android:text="Salado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rB_dulce"
        android:layout_alignStart="@+id/rB_hambreNo"
        android:id="@+id/rB_salado" />

    <TextView
        android:text="Que dulce prefieres?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dulce"
        android:layout_below="@+id/rB_dulce"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Bollito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dulce"
        android:layout_alignParentStart="true"
        android:id="@+id/rB_bollo" />

    <RadioButton
        android:text="Galleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dulce"
        android:layout_alignStart="@+id/rB_salado"
        android:id="@+id/rB_galleta" />

    <TextView
        android:text="Que salado prefieres?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_salado"
        android:layout_alignBaseline="@+id/tv_dulce"
        android:layout_alignBottom="@+id/tv_dulce"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Hamburguesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rB_pizza"
        android:layout_alignStart="@+id/rB_galleta"
        android:id="@+id/rB_hamburguesa" />

    <RadioButton
        android:text="Pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rB_pizza"
        android:layout_alignBaseline="@+id/rB_bollo"
        android:layout_alignBottom="@+id/rB_bollo"
        android:layout_alignEnd="@+id/rB_bollo" />

</RelativeLayout>
